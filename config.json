{
  "cleaning": {
    "temp_files": true,
    "browser_cache": true,
    "recycle_bin": false,
    "recent_files": true,
    "log_files": true
  },
  "browsers": {
    "chrome": true,
    "firefox": true,
    "edge": true
  },
  "security": {
    "secure_delete_passes": 3,
    "backup_registry": true
  },
  "duplicates": {
    "min_file_size": 1024,
    "excluded_extensions": [".sys", ".dll", ".exe"]
  },
  "software": {
    "unused_threshold_days": 90,
    "show_system_software": false
  },
  "excluded_paths": [
    "C:\\Windows",
    "C:\\Program Files\\WindowsApps"
  ],
  "ui": {
    "theme": "dark",
    "language": "it"
  }
}
